<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">

<div class="row">
<h1>HOMEPAGE</h1>
</div>

<div class="col">
{{#each posts as |post| }}
<div class="card row" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">
    <a href="/post/{{id}}" class="text-dark">{{title}}</a>
    </h5>
    <p class="card-text">{{content}}.</p>
  </div>
</div>
{{/each}}
</div>

</div>

