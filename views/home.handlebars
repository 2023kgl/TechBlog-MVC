<main>
<div class="container mt-5">
  <!-- Heading Row -->
  <div class="row mb-4">
    <div class="col text-center">
      <h1>HOMEPAGE</h1>
    </div>
  </div>

  <!-- Posts Row -->
  <div class="row">
    {{#each posts as |post| }}
      <div class="col-12 mb-4">
        <div class="card" style="width: 100%;">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/post/{{id}}" class="text-dark">{{title}}</a>
            </h5>
            <p class="card-text">Date Created</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
</main>
