<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="row">
  
  <div class="col">
    <h2>SIGN UP</h2>
  </div>

  <div class="col">

    <form class="signup-form">

       <div class="mb-3">
          <label for="name-signup" class="name-signup">Name</label>
          <input type="text" class="name-signup" id="name-signup" aria-describedby="emailHelp">
      </div>

      <div class="mb-3">
        <label for="email-signup" class="email-signup">Email address</label>
        <input type="text" class="email-signup" id="email-signup" aria-describedby="emailHelp">
      </div>

      <div class="mb-3">
        <label for="password-signup" class="password-signup">Password</label>
        <input type="password" class="password-signup" id="password-signup">
      </div>

      <button id="signup-form" type="submit" class="btn btn-primary">Sign UP</button>
  
    </form>

  </div> 

<script src="./js/signup.js"></script>