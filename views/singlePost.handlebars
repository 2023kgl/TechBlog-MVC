<div class="container mt-5">

  <div>
    <h1>{{title}}</h1>
    <p>Created by: {{user.username}} | Date: {{ createdAt }}</p>
    <p>{{content}}</p>
  </div>

  {{#if logged_in}}
    <form class="addCommentForm" class="mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label">Comment:</label>
        <textarea
          class="form-control"
          id="comment"
          rows="3"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  {{/if}}

  <h2>Comment History:</h2>
  
  {{#each comments}}
    <div class="comment mb-3">
      <p>{{comment_text}}</p>
      <p>By {{user.username}} on {{ createdAt }}</p>
    </div>
  {{/each}}
</div>