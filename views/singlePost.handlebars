<div class="container mt-5">

  <div class="container my-4 border-bottom pb-4">
    <h1 class="display-4 mb-3 ">{{title}}</h1>
    <p class="text-muted mb-3">by <strong>{{user.username}}</strong> | on <em>{{createdAt}}</em></p>
    <p class="lead">{{content}}</p>
  </div>


  {{#if logged_in}}

<form class="addCommentForm mb-4" id="addCommentForm">
  <div class="mb-3">
    <label for="comment" class="form-label">Comment:</label>
    <textarea
      class="form-control"
      id="comment"
      rows="4"
      placeholder="Enter your comment here"
      required
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

  {{/if}}

  <h2>Comment History:</h2>
  
  {{#each comments}}

  <div class="comment mb-4 p-3 border rounded">
    <p class="mb-2">{{comment_text}}</p>
    <small class="text-muted">By <strong>{{user.username}}</strong> on {{ createdAt }}</small>
  </div>

  {{/each}}

</div>

<script src="/js/comment.js"></script>